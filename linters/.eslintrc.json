{
  "env": { "browser": true, "es2021": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 12, "sourceType": "script" },
  "globals": {
    "Chart": "readonly"   // the CDN global used by index.html
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": ["warn", { "vars": "all", "args": "none" }],
    "no-console": "off",
    "eqeqeq": "warn",
    "curly": "warn"
  }
}
